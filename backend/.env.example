# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# LLM PROVIDERS (AI)
# ==============================================

# Groq API Key (REQUIRED)
# Get free key: https://console.groq.com/keys
# This is used for the AI chat feature
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (OPTIONAL - Fallback AI)
# Get free key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Phidata API Key (OPTIONAL)
# Only needed for advanced AI features
PHI_API_KEY=your_phidata_key_optional


# ==============================================
# STOCK MARKET APIs
# ==============================================

# Groww API (REQUIRED for Indian stocks)
# Sign up at Groww and get API credentials
GROWW_API_KEY=your_groww_api_key_here
GROWW_API_SECRET=your_groww_api_secret_here
GROWW_USER_ID=your_email@gmail.com


# ==============================================
# NEWS APIs
# ==============================================

# GNews API Key (OPTIONAL)
# Get free key: https://gnews.io/
GNEWS_API_KEY=your_gnews_api_key_here


# ==============================================
# SUPABASE (Database & Authentication)
# ==============================================

# Supabase Project URL (REQUIRED)
# Find in: Project Settings → API → Project URL
SUPABASE_URL=https://xxxxx.supabase.co

# Supabase Anon Key (REQUIRED)
# Find in: Project Settings → API → Project API keys → anon public
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Supabase Service Role Key (REQUIRED)
# Find in: Project Settings → API → Project API keys → service_role secret
# ⚠️ IMPORTANT: Keep this secret! Never expose in frontend code
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx


# ==============================================
# APPLICATION SETTINGS (OPTIONAL)
# ==============================================

# Secret key for JWT tokens (change in production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# Debug mode (set to False in production)
DEBUG=False

# Frontend URL for CORS (update if frontend runs on different port)
FRONTEND_URL=http://localhost:3000

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
