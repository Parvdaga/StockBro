# Backend Environment Variables

# Application
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# Database
# Development (SQLite)
DB_URL=sqlite+aiosqlite:///./stockbro.db
# Production (PostgreSQL/Supabase)
# DB_URL=postgresql+asyncpg://user:password@host:port/database

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# LLM Providers
# Get free Groq key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key
GOOGLE_API_KEY=your_google_api_key
PHI_API_KEY=your_phidata_api_key

# Stock Data APIs
GROWW_API_KEY=your_groww_api_key
GROWW_API_SECRET=your_groww_api_secret
GROWW_USER_ID=your_groww_user_id
FINNHUB_API_KEY=your_finnhub_api_key

# News APIs
NEWS_API_KEY=your_newsapi_key
GNEWS_API_KEY=your_gnews_api_key

# Supabase (Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key
