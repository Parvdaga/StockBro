# Backend Environment Variables

# LLM Providers (at least one required)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# Phidata (optional)
PHI_API_KEY=your_phidata_key_optional

# Groww API (for Indian Market data)
GROWW_API_KEY=your_groww_api_key_here
GROWW_API_SECRET=your_groww_api_secret_here
GROWW_USER_ID=your_groww_user_id_here

# Optional: News API
GNEWS_API_KEY=your_gnews_api_key_here

# Database
DB_URL=sqlite+aiosqlite:///./stockbro.db
# For Production (PostgreSQL):
# DB_URL=postgresql+asyncpg://user:pass@host:port/dbname
